            = @author.nom
        - if user_signed_in? && current_user.try(:val?)
          .panel-body
            %h4
              %strong
              = @post.text

      - if user_signed_in? && current_user.try(:val?)
        .panel.panel-default
          .panel-body
            -# .row
            .col-md-12
              .col-md-3
                - if @post.image2?
                  = image_tag @post.image2.url(:medium) , height: "120px",class: "img-rounded"
              .col-md-3
                - if @post.image3?
                  = image_tag @post.image3.url(:medium) , height: "120px",class: "img-rounded"
              .col-md-3
                - if @post.image4?
                  = image_tag @post.image4.url(:medium) , height: "120px",class: "img-rounded"
              .col-md-3
                - if @post.image5?
                  = image_tag @post.image5.url(:medium) , height: "120px",class: "img-rounded"

      .panel.panel-default
        .panel-body
          %h2 Commentaires
          - @post.comments.each do |comment|

            -# %p
            -#   %strong User:
            -#   - @user = User.find(comment.user_id)
            -#   = @user.nom
            -#
            -# %p
            -#   %strong Comment:
            -#   = comment.text

            %blockquote
              %p= comment.text
              %small
                - @user = User.find(comment.user_id)
                = @user.nom



          .col-md-1
          .col-md-8
            %h3 Ajouter un commentaire
            = form_for([@post, @post.comments.build]) do |f|

              %p
                = f.text_area :text

              %p
                = f.submit


