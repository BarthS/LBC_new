.row
  .col-md-12
    .col-md-4
      - if @post.image1?
        = image_tag @post.image1.url(:medium), width: "300px",class: "img-thumbnail img-rounded"
      - else
        = image_tag "/images/img/default-medium.png", width: "300px",class: "img-thumbnail img-rounded"

      %br

