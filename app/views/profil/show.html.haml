      .col-md-6
        .panel.panel-default
          .panel-body
            .row
              %h2
                .col-md-10
                  .col-md-2
                    .glyphicon.glyphicon-user
                  .col-md-8
                    = @user.nom
                    = @user.prenom
            .row
              %h3
                .col-md-10
                  .col-md-2
                    .glyphicon.glyphicon-briefcase
                  .col-md-8
                    = @user.promo

        .panel.panel-default
          .panel-body
            .row
              %h3
                .col-md-10
                  .col-md-2
                    .glyphicon.glyphicon-envelope
                  .col-md-8
                    = @user.email

            .row
              %h3
                .col-md-10
                  .col-md-2
                    .glyphicon.glyphicon-earphone
                  .col-md-8
                    = @user.tel


        .panel.panel-default.panel-body.no-padding
          %table.table.table-striped.table-hover
            %thead
              %tr
                %th
                  Mes annonces
                %th
                  Parcourir
            %tbody
              - @posts.each do |p|
                - if p.user_id = @user.id
                  %tr
                    %td
                      %strong
                      =p.title
                    %td
                      %a{href: "/posts/#{p.id}"}
                        .glyphicon.glyphicon-list-alt.h4
      .col-md-3
        - if @user.id === current_user.id || current_user.admin?
          .panel.panel-info
            .panel-heading
              %h3.panel-title Owner Box
            .panel-body
              .row
                .col-md-12
                  .col-md-5
                    %a{href: "/users/edit"}
                      %h5.glyphicon.glyphicon-edit Modifier/Supprimer
        - if current_user.try(:admin?)
          .panel.panel-primary
            .panel-heading
              %h3.panel-title Nouvel Admin
            .panel-body
              .row
                .col-md-12
                  .col-md-5
                    %a{href: "/page/validation/?a=#{@user.id}"}
                      %h5.glyphicon.glyphicon-check Valider
                  .col-md-5
                    %a{href: "/page/new_admin/?a=#{@user.id}"}
                      %h5.glyphicon.glyphicon-lock Administrateur

- else
