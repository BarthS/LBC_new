    .col-md-6
      .panel.panel-default
        .panel-body
          .row
            %h2
              .col-md-10
                .col-md-2
                  .glyphicon.glyphicon-user
                .col-md-8
                  = @user.nom
                  = @user.prenom
          .row
            %h3
              .col-md-10
                .col-md-2
                  .glyphicon.glyphicon-briefcase
                .col-md-8
                  = @user.promo

      .panel.panel-default
        .panel-body
          .row
            %h3
              .col-md-10
                .col-md-2
                  .glyphicon.glyphicon-envelope
                .col-md-8
                  = @user.email

          .row
            %h3
              .col-md-10
                .col-md-2
                  .glyphicon.glyphicon-earphone
                .col-md-8
                  = @user.tel
      .row          
      .panel.panel-default.panel-body.no-padding
        %table.table.table-striped.table-hover
          %thead
            %tr
              %th
                Mes annonces
              %th
                Parcourir
          %tbody
            - @posts.each do |p|
              - if p.user_id == @user.id
                %tr
                  %td
                    %strong
                    =p.title
                  %td
                    %a{href: "/posts/#{p.id}"}
                      .glyphicon.glyphicon-list-alt.h4
    .col-md-3
      .panel.panel-info
        .panel-heading
          %h3.panel-title Author Box
        .panel-body
          .row
            .col-md-12
              .col-md-5
                %a{href: "/users/edit"}
                  %h5.glyphicon.glyphicon-edit Modifier
              .col-md-5
                %a{href: "/users/sign_in/"}
                  %h5.glyphicon.glyphicon-remove Supprimer
      .panel.panel-primary
        .panel-heading
          %h3.panel-title Nouvel Admin
        .panel-body
          .row
            .col-md-12
              .col-md-5
                %h5.glyphicon.glyphicon-check Valider
              .col-md-5
                %h5.glyphicon.glyphicon-lock Administrateur