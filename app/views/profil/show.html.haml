          = image_tag @user.avatar.url(:medium), height: "250px", width: "250px",class: "img-thumbnail img-rounded"
        - else
          = image_tag "/images/avt/default-medium.png", height: "250px", width: "250px",class: "img-thumbnail img-rounded"
