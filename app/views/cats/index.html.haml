- @cats.each do |c|
  %a.col-md-4{href: "/cats/#{c.id}"}
    .panel.panel-default.panel-body.cat-class
      .col-md-1
        %h2{class: "#{c.icon}"}
      .col-md-2.col-md-offset-1
        %h2
          = c.name
      .col-md-1.pull-right
        %h2
          = c.posts.count

