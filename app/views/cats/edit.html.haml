= form_for :cat, url: cat_path(@cat), method: :patch do |f|
  - if @cat.errors.any?
    #error_explanation
      %h2
        = pluralize(@cat.errors.count, "error")
        prohibited
        this post from being saved:
      %ul
        - @cat.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :Nom
    %br/
    = f.text_field :name
  %p
    = f.label :Icon
    %br/
    = f.text_field :icon, placeholder: "Ex: 'glyphicon glyphicon-tag'"
  %p
    = f.submit

= render 'icons'
