%h1 Nouvelle annonce

= form_for @annonce do |f|
  - if @annonce.errors.any?
    #error_explanation
      %h2= "#{pluralize(@annonce.errors.count, "error")} prohibited this annonce from being saved:"
      %ul
        - @annonce.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
